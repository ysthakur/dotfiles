# Start tmux on login if terminal has more than 15 lines and we're not already in tmux
if [[ $(tput lines) > 15 ]] && command -v tmux &> /dev/null && [ -n "$PS1" ] && [[ ! "$TERM" =~ screen ]] && [[ ! "$TERM" =~ tmux ]] && [ -z "$TMUX" ]; then
  exec tmux
fi

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Uncomment the following line to use hyphen-insensitive completion.
# Case-sensitive completion must be off. _ and - will be interchangeable.
HYPHEN_INSENSITIVE="true"

# Uncomment the following line if pasting URLs and other text is messed up.
# DISABLE_MAGIC_FUNCTIONS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

HIST_STAMPS="yyyy-mm-dd"
HISTFILE=~/.zsh_history
HISTSIZE=5000
SAVEHIST=5000
# Persist history
setopt APPEND_HISTORY
# Remove old commands if duplicated
setopt HIST_IGNORE_ALL_DUPS
HISTORY_IGNORE='(git commit (--amend *|-am *))'
# Don't remember lines starting with a space
setopt HIST_IGNORE_SPACE

# Never autosuggest anything from history over 60 chars
ZSH_AUTOSUGGEST_HISTORY_IGNORE='((?(#c60,))|git commit (--amend *|-am *)|git clone *|chezmoi git -- commit *|wget *)'

# Ask to correct command if typoed
setopt CORRECT

export TERM=xterm-256color

# Enable keys/shortcuts
bindkey "^[[1;5C" forward-word   # Ctrl+Right
bindkey "^[[1;5D" backward-word  # Ctrl+Left
bindkey "^[[H" beginning-of-line # Home
bindkey "^[[F" end-of-line       # End
bindkey "^[[3~" delete-char      # Delete
bindkey "^[[A" history-substring-search-up # Up arrow to search previous history
bindkey "^[[B" history-substring-search-down # Down arrow to search later history
bindkey "^[[Z" reverse-menu-complete # Shift-Tab to go to previous completion suggestion

ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=240'

# Zinit installation
ZINIT_HOME="${XDG_DATA_HOME:-${HOME}/.local/share}/zinit/zinit.git"
[ ! -d $ZINIT_HOME ] && mkdir -p "$(dirname $ZINIT_HOME)"
[ ! -d $ZINIT_HOME/.git ] && git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
source "${ZINIT_HOME}/zinit.zsh"

# User configuration

## Begin zinit stuff
zinit wait lucid for \
        OMZL::git.zsh \
  atload"unalias grv" \
        OMZP::git

zinit wait lucid depth=1 for \
  atinit"zicompinit; zicdreplay" \
      zdharma-continuum/fast-syntax-highlighting \
  atload"_zsh_autosuggest_start" \
      zsh-users/zsh-autosuggestions \
  blockf atpull'zinit creinstall -q .' \
      zsh-users/zsh-completions \
  zsh-users/zsh-history-substring-search

zinit ice atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”; zstyle ":completion:*" menu select'
zinit light trapd00r/LS_COLORS
## End zinit stuff

# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

export PATH="$PATH:$HOME/.local/bin:$HOME/bin"

# Colored output for ls
alias ls="ls --color=auto --classify"
# Make less more convenient
export LESS="--no-init --quit-if-one-screen -R"

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# asdf
. "$HOME/.nix-profile/share/asdf-vm/asdf.sh"

# Nix home manager
source $HOME/.nix-profile/etc/profile.d/hm-session-vars.sh

# Python virtualenvs
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=$HOME/Devel
VIRTUALENV_WRAPPER=$(command -v virtualenvwrapper.sh) && test -f $VIRTUALENV_WRAPPER && source $VIRTUALENV_WRAPPER

# Ruby gems
export GEM_HOME="$HOME/gems"
export PATH="$HOME/gems/bin:$PATH"

# Go
export GOBIN="$HOME/go/bin"
export PATH="$PATH:$GOBIN"

# Setup Zoxide
eval "$(zoxide init zsh)"

# Setup oh-my-posh for prompt
eval "$(oh-my-posh init zsh --config $HOME/my_prompt_theme.omp.json)"

# Setup direnv
# TODO possibly use Zinit's recommended way instead
eval "$(direnv hook zsh)"

